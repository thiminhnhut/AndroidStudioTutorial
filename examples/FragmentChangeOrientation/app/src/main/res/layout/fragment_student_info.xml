<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="#d9ff00"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/txtHoTen"
        android:textSize="40dp"
        android:textColor="#fd2317"
        android:text="Họ tên"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txtNamSinh"
        android:textSize="30dp"
        android:textColor="#e90fe1"
        android:text="Năm sinh: 2017"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txtDiaChi"
        android:textSize="30dp"
        android:textColor="#1862e9"
        android:text="Địa chỉ: Hà Nội"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_marginTop="10dp"
        android:id="@+id/txtEmail"
        android:textSize="30dp"
        android:textColor="#e93b18"
        android:text="Email: abc@gmail.com"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>